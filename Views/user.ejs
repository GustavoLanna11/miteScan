<%- include ('partials/header.ejs')%>

<div class="container">
    <br>
    <div id="titulo_pagina">
        <a href="/">
            <div id="voltar"><img src="imgs/seta.png" style="margin-top: 12px; margin-left: 12px" alt="" width="35"></div>
        </a>
        <h1>Cadastrar Usuário</h1>
    </div>
    <br>
    <div class="card">
        <div class="card-body">
            <form action="/user/new" method="POST">
                <label>Nome: </label>
                <input type="text" name="nome" id="nome" class="form-control" required><br>
                <label>Email: </label>
                <input type="text" name="email" id="email" class="form-control" required><br>
                <label>Login: </label>
                <input type="text" name="login" id="login" class="form-control" required><br>
                <label>Senha: </label>
                <input type="text" name="senha" id="senha" class="form-control" required><br>
                <label>Acesso: </label>
                <input type="text" name="acesso" id="acesso" class="form-control" required><br>
        
                <input type="submit" value="Cadastrar" class="btn btn-success">
                <input type="reset" value="Limpar" class="btn btn-warning">
        
            </form>
        </div>
    </div>
   
    <br><hr><br>

    <table class="table table-stripped" border="1">
        <thead>
            <th style="width: 150px; text-align: left;">Nome:</th>
            <th style="width: 200px; text-align: left;">Email:</th>
            <th style="width: 200px; text-align: left;">Login:</th>
            <th style="width: 200px; text-align: left;">Senha:</th>
            <th style="width: 150px; text-align: left;">Acesso:</th>
            <th style="width: 150px; text-align: left;">Ações:</th>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.nome%></td>
                    <td><%= user.email%></td>
                    <td><%= user.login%></td>
                    <td><%= user.senha%></td>
                    <td><%= user.acesso%></td>
                    <td><a href="/user/edit/<%=user.id %>">Editar</a></td>
                    <td><a onclick="return confirm('Deseja mesmo excluir o usuário <%= user.nome %>?')" href="/User/delete/<%= user.id %>">Excluir</a></td>
                </tr>
            <% }) %>
            
        </tbody>
    </table>
</div>

<%- include ('partials/footer.ejs')%>